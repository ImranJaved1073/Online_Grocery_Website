@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}

@model Product

<body>
    <div class="container-fluid vh-100 d-flex justify-content-center align-items-center mt-3">
        <div class="container p-4 rounded shadow-lg">
            <div class="container">
                <div>
                    <h4>Product</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Product Code</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.ProductCode)</dd>
                        <dt class="col-sm-2">Name</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
                        <dt class="col-sm-2">Category</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Category)</dd>
                        <dt class="col-sm-2">Weight</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Weight)</dd>
                        <dt class="col-sm-2">Quantity</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Quantity)</dd>
                        <dt class="col-sm-2">Regular Price</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.RegularPrice)</dd>
                        <dt class="col-sm-2">Sale Price</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.SalePrice)</dd>
                        <dt class="col-sm-2">Product Description</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.ProductDescription)</dd>
                        <dt class="col-sm-2">In Stock</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.InStock)</dd>
                        <dt class="col-sm-2">Image URL</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.ImageUrl)</dd>
                        <dt class="col-sm-2">Created At</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedAt)</dd>
                    </dl>

                    <form asp-action="Details">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                            <a href="@Url.Action("ProductList")" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
