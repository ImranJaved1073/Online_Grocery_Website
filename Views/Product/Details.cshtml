@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}

@model AddProductViewModel

<body>
    <div class="container-fluid mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Product Details</h4>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Product Code</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Variant.ProductCode)</dd>
                            <dt class="col-sm-4">Name</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.Name)</dd>
                            <dt class="col-sm-4">Category</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.CategoryName)</dd>
                            <dt class="col-sm-4">Weight</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Variant.Size)</dd>
                            <dt class="col-sm-4">Quantity</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Variant.Quantity)</dd>
                            <dt class="col-sm-4">Regular Price</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Variant.Price)</dd>
                            <dt class="col-sm-4">Sale Price</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Variant.SalePrice)</dd>
                            <dt class="col-sm-4">Product Description</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Variant.VariantDescription)</dd>
                            <dt class="col-sm-4">In Stock</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Variant.InStock)</dd>
                            <dt class="col-sm-4">Created At</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Variant.CreatedAt)</dd>
                        </dl>

                        <div class="text-end">
                            <form asp-action="Details">
                                <input type="hidden" asp-for="Variant.Id" />
                                <a asp-action="Edit" asp-route-id="@Model.Variant.Id" class="btn btn-warning me-2">Edit</a>
                                <a href="@Url.Action("ProductList")" class="btn btn-secondary">Back to List</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Product Image</h4>
                    </div>
                    <div class="card-body text-center">
                        <img src="~/@Model.Variant.ImagePath" class="img-fluid rounded" alt="Product Image">
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
