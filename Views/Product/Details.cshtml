@model Product

@{
    Layout = "_AdminLayout";
}

<style>
    .card {
        transition: all 0.3s ease-in-out;
        border: 1px solid #e0e0e0;
    }

        .card:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background-color: #f8f9fa;
        }

    .card-header {
        background-color: #088a08;
        color: #fff;
    }

    .btn-primary {
        transition: all 0.3s ease-in-out;
        background-color: #088a08;
        border-color: #088a08;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            background-color: #0aad0a;
            border-color: #0aad0a;
        }

    .form-control:focus {
        border-color: #80bdff;
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
    }

    .input-group:hover .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .input-group:hover .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    #productSKU {
        font-weight: bold;
    }

    .breadcrumb-item a {
        color: #088a08;
    }

        .breadcrumb-item a:hover {
            text-decoration: underline;
        }

    .form-label {
        font-weight: 500;
    }
</style>


<body>

    <main class="main-wrapper">
        <div class="container">
            <!-- page header -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="d-md-flex justify-content-between align-items-center">
                        <div>
                            <h2>Product Details</h2>
                            <!-- breadcrumb -->
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb mb-0">
                                    <li class="breadcrumb-item"><a href="#" class="text-decoration-none">Dashboard</a></li>
                                    <li class="breadcrumb-item"><a href="#" class="text-decoration-none">Products</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Product Details</li>
                                </ol>
                            </nav>
                        </div>
                        <!-- button -->
                        <div class="text-end mt-4">
                            <form asp-action="Details">
                                <input type="hidden" asp-for="Id" />
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edit</a>
                                <a href="@Url.Action("ProductList")" class="btn btn-secondary">Back to List</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <form method="post" asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-lg-8">
                        <!-- card -->
                        <div class="card mb-4">
                            <!-- card body -->
                            <div class="card-body p-4">
                                <h4 class="mb-4 h5 text-center font-monospace">PRODUCT INFORMATION</h4>
                                <div class="row">
                                    <!-- input -->
                                    <div class="col-lg-12 mb-3">
                                        <label asp-for="Name" class="form-label">Name</label>
                                        <textarea asp-for="Name" type="text" class="form-control" rows="2" disabled></textarea>
                                        <div class="invalid-feedback">Please enter a title.</div>
                                    </div>
                                    <div class="col-lg-4 mb-3">
                                        <label asp-for="ProductCode" class="form-label">Product Code</label>
                                        <input asp-for="ProductCode" type="text" class="form-control" placeholder="Enter Product Code" disabled>
                                    </div>
                                    <div class="col-lg-4 mb-3">
                                        <label asp-for="Weight" class="form-label">Weight</label>
                                        <input asp-for="Weight" type="text" class="form-control" placeholder="Weight" aria-label="Text input with select list" disabled>
                                        <span asp-validation-for="Weight" class="text-danger"></span>
                                    </div>

                                    <!-- input -->
                                    <div class="col-lg-4 mb-3">
                                        <label asp-for="Quantity" class="form-label">Quantity</label>
                                        <input asp-for="Quantity" type="text" class="form-control" placeholder="Quantity" disabled>
                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-4 mb-3">
                                        <label asp-for="CategoryID" class="form-label">Category</label>
                                        <input asp-for="CategoryName" type="text" class="form-control" disabled>
                                    </div>
                                    <!-- input -->
                                    <div class="col-lg-4 mb-3">
                                        <label asp-for="BrandID" class="form-label">Brand Name</label>
                                        <input asp-for="BrandName" type="text" class="form-control" disabled>

                                    </div>
                                    <div class="col-lg-4 mb-3">
                                        <label asp-for="CreatedAt" class="form-label">Date Created</label>
                                        <input asp-for="CreatedAt" type="datetime" class="form-control" disabled>
                                    </div>

                                    <div class="col-lg-4 mb-3">
                                        <label asp-for="UpdatedAt" class="form-label">Date Updated</label>
                                        <input asp-for="UpdatedAt" type="datetime" class="form-control" disabled>
                                    </div>

                                    <div class="col-lg-4 mb-3">
                                        <label asp-for="Price" class="form-label">Regular Price</label>
                                        <input asp-for="Price" type="text" class="form-control" placeholder="Rs.0.00" disabled>
                                    </div>
                                    <!-- input -->
                                    <div class="col-lg-4 mb-3">
                                        <label asp-for="SalePrice" class="form-label">Sale Price</label>
                                        <input asp-for="SalePrice" type="text" class="form-control" placeholder="Rs.0.00" disabled>
                                    </div>

                                    <!-- input -->
                                    <div class="col-lg-12 mt-4">
                                        <label asp-for="Description" class="mb-3 h5">Product Descriptions</label>
                                        <textarea asp-for="Description" class="form-control" rows="6" disabled></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <!-- card -->
                        <div class="card mb-4">
                            <!-- card body -->
                            <div class="card-body p-4">
                                <div class="col-lg-12 mt-4">
                                    <label asp-for="Picture" class="mb-3 h5">Product Image</label>
                                    <img src="~/@Model.ImagePath" class="img-fluid rounded" alt="Product Image" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>


    <!-- main -->
    @*  <!-- Libs JS -->
    <!-- <script src="~/libs/jquery/dist/jquery.min.js"></script> -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/simplebar/dist/simplebar.min.js"></script>

    <!-- Theme JS -->
    <script src="~/js/theme.min.js"></script>

    <script src="~/lib/quill/dist/quill.min.js"></script>
    <script src="~/js/vendors/editor.js"></script>
    <script src="~/lib/dropzone/dist/min/dropzone.min.js"></script>
    <script src="~/js/vendors/dropzone.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script> *@

</body>