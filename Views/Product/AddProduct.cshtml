
@model AddProductViewModel

@{
    Layout = "_AdminLayout";
}

<style>
    .card {
        transition: all 0.3s ease-in-out;
    }

    .card:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background-color: #f8f9fa;
     }

    .btn-primary {
        transition: all 0.3s ease-in-out;
        background-color: #088a08;
        border-color: #088a08;
        
    }

    .btn-primary:hover {
            transform: translateY(-2px);
            background-color: #0aad0a;
            border-color: #0aad0a;
     }

    .form-control:focus {
        border-color: #80bdff;
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
    }

    .input-group:hover .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }


    .input-group:hover .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
    }
    #productSKU{
        font-weight:bold;
    }

</style>


<body>

    <main class="main-wrapper">
        <div class="container">
            <!-- page header -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="d-md-flex justify-content-between align-items-center">
                        <div>
                            <h2>Add New Product</h2>
                            <!-- breadcrumb -->
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb mb-0">
                                    <li class="breadcrumb-item"><a href="#" class="text-decoration-none">Dashboard</a></li>
                                    <li class="breadcrumb-item"><a href="#" class="text-decoration-none">Products</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Add New Product</li>
                                </ol>
                            </nav>
                        </div>
                        <!-- button -->
                        <div>
                            <a href="@Url.Action("ProductList", "Product")" class="btn btn-light">Back to Product</a>
                        </div>
                    </div>
                </div>
            </div>
            <form method="post" action="/Product/AddProduct" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-lg-8">
                        <!-- card -->
                        <div class="card mb-4">
                            <!-- card body -->
                            <div class="card-body p-4">
                                <h4 class="mb-4 h5">Product Information</h4>
                                <div class="row">
                                    <!-- input -->
                                    <div class="col-lg-4 mb-3">
                                        <label asp-for="Product.Name" class="form-label">Name</label>
                                        <input asp-for="Product.Name" type="text" class="form-control" placeholder="Product Name" required>
                                        <div class="invalid-feedback">Please enter a title.</div>
                                    </div>
                                    <div class="col-lg-4 mb-3">
                                        <label asp-for="Variant.Color" class="form-label">Color</label>
                                        <input asp-for="Variant.Color" type="text" class="form-control" placeholder="Color" required>
                                    </div>
                                    <!-- input -->
                                    <div class="col-lg-4 mb-3">
                                        <label asp-for="Variant.Quantity" class="form-label">Quantity</label>
                                        <input asp-for="Variant.Quantity" type="text" class="form-control" placeholder="Quantity" required>
                                        <span asp-validation-for="Variant.Quantity" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-12 mb-3">
                                        @* <label asp-for="Product.CategoryName" class="form-label">Product Category</label>
                                        <select asp-for="Product.CategoryName" class="form-select">
                                            <option selected disabled>Select Product Category</option>
                                            <option value="Dairy, Bread & Eggs">Dairy, Bread & Eggs</option>
                                            <option value="Snacks & Munchies">Snacks & Munchies</option>
                                            <option value="Fruits & Vegetables">Fruits & Vegetables</option>
                                        </select> *@
                                        <label asp-for="Product.CategoryID" class="form-label">Parent Category</label>
                                        @if (Model.Categories != null)
                                        {
                                            <select asp-for="Product.CategoryID" class="form-control form-select" asp-items="Model.Categories">
                                                <option value="ParentCategoryID">--Select Category--</option>
                                            </select>
                                        }
                                        else
                                        {
                                            <select asp-for="Product.CategoryID" class="form-control">
                                                <option value="">--Select Category--</option>
                                            </select>
                                        }
                                    </div>
                                    <!-- input -->
                                    <div class="col-lg-6 mb-3">
                                        <label asp-for="Product.BrandID" class="form-label">Brand Name</label>
                                        @if (Model.Brands != null)
                                        {
                                            <select asp-for="Product.BrandID" class="form-control form-select" asp-items="Model.Brands">
                                                <option value="BrandID">--Select Brand--</option>
                                            </select>
                                        }
                                        else
                                        {
                                            <select asp-for="Product.BrandID" class="form-control">
                                                <option value="">--Select Brand--</option>
                                            </select>
                                        }
                                        
                                    </div>
                                    <!-- input -->
                                    <div class="col-lg-6 mb-3">
                                        <label asp-for="Variant.Size" class="form-label">Product Size</label>
                                        <select asp-for="Variant.Size" class="form-select">
                                            <option selected disabled>Select Product Size</option>
                                            <option value="Extra Small">Extra Small</option>
                                            <option value="Small">Small</option>
                                            <option value="Medium">Medium</option>
                                            <option value="Large">Large</option>
                                            <option value="Extra Large">Extra Large</option>
                                            <option value="Extra Extra Large">Extra Extra Large</option>
                                        </select>
                                    </div>
                                    <div class="col-lg-12 mt-4">
                                        <label asp-for="Variant.Picture" class="mb-3 h5">Product Images</label>
                                        <input asp-for="Variant.Picture" class="form-control form-control-lg" id="formFileLg" type="file">

                                    </div>
                                    <!-- input -->
                                    <div class="col-lg-12 mt-4">
                                        <label asp-for="Variant.VariantDescription" class="mb-3 h5">Product Descriptions</label>
                                        <textarea asp-for="Variant.VariantDescription" class="form-control" rows="6"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <!-- card -->
                        <div class="card mb-4">
                            <!-- card body -->
                            <div class="card-body p-4">
                                <!-- input -->
                                <div class="mb-3">
                                    <label asp-for="Variant.ProductCode" class="form-label">Product Code</label>
                                    <input asp-for="Variant.ProductCode" type="text" class="form-control" placeholder="Enter Product Code">
                                </div>
                                <!-- input -->
                                <div class="mb-3">
                                    <label asp-for="Variant.InStock" class="form-label" id="productSKU">Status</label>
                                    <div class="form-check form-check-inline">
                                        <input asp-for="Variant.InStock" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1" checked>
                                        <label asp-for="Variant.InStock" class="form-check-label" for="inlineRadio1">Active</label>
                                    </div>
                                    <!-- input -->
                                    <div class="form-check form-check-inline">
                                        <input asp-for="Variant.InStock" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
                                        <label asp-for="Variant.InStock" class="form-check-label" for="inlineRadio2">Disabled</label>
                                    </div>
                                </div>
                                <!-- input -->
                                <div class="mb-3">
                                    <label asp-for="Product.CreatedAt" class="form-label">Select Date</label>
                                    <input asp-for="Product.CreatedAt" type="datetime-local" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                                </div>
                            </div>
                        </div>

                        <!-- card -->
                        <div class="card mb-4">
                            <!-- card body -->
                            <div class="card-body p-4">
                                <h4 class="mb-4 h5">Product Price</h4>
                                <!-- input -->
                                <div class="mb-3">
                                    <label asp-for="Variant.Price" class="form-label">Regular Price</label>
                                    <input asp-for="Variant.Price" type="text" class="form-control" placeholder="Rs.0.00">
                                </div>
                                <!-- input -->
                                <div class="mb-3">
                                    <label asp-for="Variant.SalePrice" class="form-label">Sale Price</label>
                                    <input asp-for="Variant.SalePrice" type="text" class="form-control" placeholder="Rs.0.00">
                                </div>
                            </div>
                        </div>
                        <!-- button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Create Product</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>


    <!-- main -->
    @*  <!-- Libs JS -->
    <!-- <script src="~/libs/jquery/dist/jquery.min.js"></script> -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/simplebar/dist/simplebar.min.js"></script>

    <!-- Theme JS -->
    <script src="~/js/theme.min.js"></script>

    <script src="~/lib/quill/dist/quill.min.js"></script>
    <script src="~/js/vendors/editor.js"></script>
    <script src="~/lib/dropzone/dist/min/dropzone.min.js"></script>
    <script src="~/js/vendors/dropzone.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script> *@

</body>

