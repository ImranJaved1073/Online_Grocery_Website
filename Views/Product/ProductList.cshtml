@{
    Layout = "_AdminLayout";
}

@model List<Product>

<link href="~lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet">
<link href="~lib/feather-webfont/dist/feather-icons.css" rel="stylesheet">
<style>
    .card {
        transition: all 0.3s ease-in-out;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

    .btn-primary {
        transition: all 0.3s ease-in-out;
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .btn-outline-warning:hover,
    .btn-outline-primary:hover,
    .btn-outline-danger:hover {
        transform: scale(1.05);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
    }

    .pagination .page-link {
        transition: all 0.3s ease-in-out;
    }

        .pagination .page-link:hover {
            background-color: #007bff;
            border-color: #007bff;
        }

    .pagination .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>

<body>

    <!-- main -->

    <main class="container">
        <div class="row mb-8">
            <div class="col-md-12">
                <!-- page header -->
                <div class="d-md-flex justify-content-between align-items-center">
                    <div>
                        <h2>Products</h2>
                        <!-- breacrumb -->
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0">
                                <li class="breadcrumb-item"><a href="#" class="text-inherit">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Products</li>
                            </ol>
                        </nav>
                    </div>
                    <!-- button -->
                    <div>
                        <a href="@Url.Action("AddProduct", "Product")" class="btn btn-primary">Add Product</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-xl-12 col-12 mb-5">
                <!-- card -->
                <div class="card h-100 card-lg">
                    <div class="px-6 py-6 bg-tertiary-subtle border rounded-top">
                        <div class="row justify-content-between">
                            <!-- form -->
                            <div class="col-lg-4 col-md-6 col-12 mb-2 mb-lg-0">
                                @using (Html.BeginForm("ProductList", "Product", FormMethod.Get, new { @class = "d-flex" }))
                                {
                                    <div class="input-group">
                                        @Html.TextBox("search", null, new { @class = "form-control", placeholder = "Search Products" })
                                        <button type="submit" class="btn btn-primary">Search</button>
                                    </div>
                                }


                            </div>
                            <!-- select option -->
                            <div class="col-lg-2 col-md-4 col-12">
                                <select class="form-select">
                                    <option selected>Status</option>
                                    <option value="1">Active</option>
                                    <option value="2">Deactive</option>
                                    <option value="3">Draft</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <!-- card body -->
                    <div class="card-body p-0">
                        <!-- table -->
                        <div class="table-responsive">
                            <table class="table table-centered table-hover table-bordered table-striped mb-0 table-with-checkbox">
                                <thead class="border border-success bg-success-subtle">
                                    <tr>
                                        <th>Sr#</th>
                                        <th class="text-center">Image</th>
                                        <th class="text-center">Name</th>
                                        <th class="text-center">Category</th>
                                        <th class="text-center">Brand</th>
                                        <th class="text-center">Status</th>
                                        <th class="text-center">Price</th>
                                        <th class="text-center">Created at</th>
                                        <th class="text-center">Updated at</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count() == 0)
                                    {
                                        <tr>
                                            <td colspan="12" class="text-center">No products found!!</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        int i = 1;
                                        foreach (var product in Model)
                                        {
                                            <tr class="text-center">
                                                <td>@i</td>
                                                @{
                                                    i += 1;
                                                }
                                                <td>
                                                    <img src="~/@product.ImagePath" alt="" class="icon-shape icon-md" />
                                                </td>
                                                <td class="fs-6 fw-light"><a href="#" class="text-reset">@product.Name</a></td>
                                                <td class="fs-6 fw-light">@product.CategoryName</td>
                                                <td class="fs-6 fw-light">@product.BrandName</td>
                                                <td>
                                                    @if (product.Quantity > 10)
                                                    {
                                                        <span class="badge bg-success">@product.Quantity</span>
                                                    }
                                                    else if (product.Quantity > 0 && product.Quantity <= 10)
                                                    {
                                                        <span class="badge bg-warning">@product.Quantity</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">Out of Stock</span>
                                                    }
                                                </td>
                                                <td class="font-monospace fw-lighter">@product.SalePrice</td>
                                                <td class="font-monospace fw-lighter">@product.CreatedAt.ToString("dd-MM-yy")</td>
                                                <td class="font-monospace fw-lighter">@product.UpdatedAt.ToString("dd-MM-yy")</td>
                                                <td>
                                                    <div class="d-flex">
                                                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-outline-warning me-1">
                                                            <i class="bi bi-info-circle"></i>
                                                        </a>
                                                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary me-1">
                                                            <i class="bi bi-pencil-square"></i>
                                                        </a>
                                                        <a onclick="confirmDelete(@product.Id)" class="btn btn-sm btn-outline-danger">
                                                            <i class="bi bi-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                    <partial name="_Pagination" model="ViewBag.Pager" />
                </div>
            </div>
        </div>
    </main>

    <!-- Modal for Confirmation -->
    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this product?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
            function confirmDelete(productId) {
                $('#deleteConfirmationModal').modal('show');

                $('#confirmDeleteBtn').click(function () {
                    // Make an AJAX request to the delete action method
                    $.ajax({
                        url: '/Product/Delete/' + productId,
                        type: 'POST',
                        success: function (result) {
                            // Handle success response, if needed
                            // For example, you can reload the page after successful deletion
                            window.location.reload();
                        },
                        error: function (xhr, status, error) {
                            // Handle error response, if needed
                            console.error(xhr.responseText);
                        }
                    });
                });
            }
        </script>



        <script src="~/js/vendors/jquery.min.js"></script>

        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/simplebar/dist/simplebar.min.js"></script>

        <!-- Theme JS -->
        <script src="~/js/theme.min.js"></script>

        <script src="~/lib/quill/dist/quill.min.js"></script>
        <script src="~/js/vendors/editor.js"></script>
        <script src="~/libs/apexcharts/dist/apexcharts.min.js"></script>
        <script src="~/js/vendors/chart.js"></script>
    }
</body>

