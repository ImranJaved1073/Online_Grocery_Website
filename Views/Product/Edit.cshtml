                        </div>
                    </div>
                </div>
            </div>
            <!-- row -->
            <form method="post" asp-action="Edit"  enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                <div class="col-lg-8 col-12">
                    <!-- card -->
                    <div class="card mb-6 card-lg">
                        <!-- card body -->
                        <div class="card-body p-6">
                            <h4 class="mb-4 h5">Product Information</h4>
                            <div class="row">
                                <!-- input -->
                                <div class="form-group mb-3 col-lg-6">
                                    <label asp-for="Name" class="form-label">Title</label>
                                    <input asp-for="Name" type="text" class="form-control" placeholder="Product Name" required />
                                    <div class="invalid-feedback">Please enter email.</div>
                                </div>
                                <!-- input -->
                                <div class="mb-3 col-lg-6">
                                    <label asp-for="Category" class="form-label">Product Category</label>
                                    <select asp-for="Category" class="form-select">
                                        <option selected>Product Category</option>
                                        <option value="Dairy, Bread & Eggs">Dairy, Bread & Eggs</option>
                                        <option value="Snacks & Munchies">Snacks & Munchies</option>
                                        <option value="Fruits & Vegetables">Fruits & Vegetables</option>
                                    </select>
                                </div>
                                <!-- input -->
                                <div class="mb-3 col-lg-6">
                                     <label asp-for="Weight" class="form-label">Weight</label>
                                    <input asp-for="Weight" type="text" class="form-control" placeholder="Weight" required />
                                </div>
                                <!-- input -->
                                <div class="mb-3 col-lg-6">
                                    <label asp-for="Quantity" class="form-label">Quantity</label>
                                    <input asp-for="Quantity" type="text" class="form-control" placeholder="Quantity" required />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                                <div>
                                    <div class="mb-3 col-lg-12 mt-5">
                                        <!-- heading -->
                                        <label asp-for="Picture" class="mb-3 h5">Product Images</label>

                                        <!-- input -->
                                        <div class="input-group mb-3">
                                                <input asp-for="Picture" class="form-control form-control-lg" id="formFileLg" type="file" aria-describedby="button-addon2">
                                                <button class="btn btn-success" type="submit" id="button-addon2">Upload</button>
                                        </div>

                                    </div>
                                </div>
                                <!-- input -->
                                <div class="mb-3 col-lg-12 mt-5">
                                    <label asp-for="ProductDescription" class="mb-3 h5">Product Descriptions</label>
                                    <textarea asp-for="ProductDescription" class="form-control" cols="6"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-12">
                    <!-- card -->
                    <div class="card mb-6 card-lg">
                        <!-- card body -->
                        <div class="card-body p-6">
                            <!-- input -->
                            @* <div class="form-check form-switch mb-4">
                                <input asp-for="InStock" class="form-check-input" type="checkbox" role="switch" id="flexSwitchStock" checked />
                                <label asp-for="InStock" class="form-check-label" for="flexSwitchStock">In Stock</label>
                            </div> *@
                            <!-- input -->
                            <div>
                                <div class="mb-3">
                                    <label asp-for="ProductCode" class="form-label">Product Code</label>
                                    <input asp-for="ProductCode" type="text" class="form-control" placeholder="Enter Product Title" />
                                </div>
                                <!-- input -->
                                <div class="mb-3">
                                    <label asp-for="InStock" class="form-label" id="productSKU">Status</label>
                                    <br />
                                    <div class="form-check form-check-inline">
                                            <input asp-for="InStock" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1" checked />
                                            <label asp-for="InStock" class="form-check-label" for="inlineRadio1">Active</label>
                                    </div>
                                    <!-- input -->
                                    <div class="form-check form-check-inline">
                                            <input asp-for="InStock" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2" />
                                            <label asp-for="InStock" class="form-check-label" for="inlineRadio2">Disabled</label>
                                    </div>
                                    <!-- input -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- card -->
                    <div class="card mb-6 card-lg">
                        <!-- card body -->
                        <div class="card-body p-6">
                            <h4 class="mb-4 h5">Product Price</h4>
                            <!-- input -->
                            <div class="mb-3">
                                <label asp-for="RegularPrice" class="form-label">Regular Price</label>
                                    <input asp-for="RegularPrice" type="text" class="form-control" placeholder="$0.00" />
                            </div>
                            <!-- input -->
                            <div class="mb-3">
                                    <label asp-for="SalePrice" class="form-label">Sale Price</label>
                                    <input asp-for="SalePrice" type="text" class="form-control" placeholder="$0.00" />
                            </div>
                        </div>
                    </div>
                    <!-- button -->

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Update Product</button>
                    </div>
                </div>
            </div>
            </form>
