<div class="container my-5">
    <div class="row">
        <!-- col -->
        <div class="offset-lg-2 col-lg-8 col-12">
            <div class="container">
                <!-- row -->
                <div class="row">
                    <div class="col-12">
                        <!-- card -->
                        <div class="card py-4 border-0 mb-4 shadow-sm rounded text-center">
                            <h1 class="fw-bold text-primary"><i class="bi bi-telephone-fill"></i> Contact Us</h1>
                        </div>
                    </div>
                </div>
                <!-- form -->
                <form class="row needs-validation" novalidate>
                    <!-- input -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label" for="contactFName">
                            Name
                            <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white"><i class="fas fa-user"></i></span>
                            <input type="text" id="contactFName" class="form-control" name="Name" placeholder="Enter Your Name" required />
                            <div class="invalid-feedback">Please enter your name.</div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label" for="contactEmail">
                            Email
                            <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white"><i class="fas fa-envelope"></i></span>
                            <input type="email" id="contactEmail" name="contactEmail" class="form-control" placeholder="Enter Your Email" required />
                            <div class="invalid-feedback">Please enter your email.</div>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <!-- input -->
                        <label class="form-label" for="contactTextarea">Message</label>
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white"><i class="fas fa-comments"></i></span>
                            <textarea rows="3" id="contactTextarea" class="form-control" placeholder="Additional Comments" required></textarea>
                            <div class="invalid-feedback">Please enter a message.</div>
                        </div>
                    </div>
                    <div class="col-md-12 text-center">
                        <!-- btn -->
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
                <!-- contact info -->
                <div class="row mt-5">
                    <div class="col-lg-4 text-center mb-4">
                        <div class="card border-0 shadow-sm rounded p-3">
                            <div class="card-body">
                                <i class="fas fa-map-marker-alt text-primary fa-2x mb-3"></i>
                                <h5 class="card-title">Address</h5>
                                <p class="card-text">66-N Samanabad, Lahore, Pakistan</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 text-center mb-4">
                        <div class="card border-0 shadow-sm rounded p-3">
                            <div class="card-body">
                                <i class="fas fa-envelope text-primary fa-2x mb-3"></i>
                                <h5 class="card-title">Email</h5>
                                <p class="card-text">info@example.com</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 text-center mb-4">
                        <div class="card border-0 shadow-sm rounded p-3">
                            <div class="card-body">
                                <i class="fas fa-phone-alt text-primary fa-2x mb-3"></i>
                                <h5 class="card-title">Contact</h5>
                                <p class="card-text">+012 345 67890</p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end of contact info -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/simplebar/dist/simplebar.min.js"></script>
    <script src="~/js/theme.min.js"></script>
}