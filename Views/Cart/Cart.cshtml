@model Cart

@{
    ViewData["Title"] = "Shop Cart";
}
<style>
    .button-like-link {
        background: none;
        border: none;
        padding: 0;
        font: inherit;
        color: #007bff;
        cursor: pointer;
    }

        .button-like-link:focus {
            outline: none;
        }

        .button-like-link:active {
            color: #0056b3;
        }

    .card-custom {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .input-spinner {
        display: flex;
        align-items: center;
    }

    .quantity-field {
        text-align: center;
        max-width: 60px;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
    }

    .button-minus, .button-plus {
        border: 1px solid #ced4da;
        background-color: #f8f9fa;
        color: #495057;
        padding: 0.375rem 0.75rem;
        border-radius: 0.25rem;
        cursor: pointer;
    }
</style>
<main>
    <!-- section -->
    <section class="mb-lg-14 mb-8 mt-8">
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-12">
                    <!-- card -->
                    <div class="card py-1 border-0 mb-8 card-custom">
                        <div>
                            <h1 class="fw-bold bi-cart text-center">Shopping Cart</h1>
                            @* <p class="mb-0">Shopping in 382480</p> *@
                        </div>
                    </div>
                </div>
            </div>
            <!-- row -->
            <div class="row">
                <div class="col-lg-8 col-md-7">
                    <div class="py-3">
                        @if (TempData != null && TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <p>@TempData["Message"]</p>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        else
                        {
                            <ul class="list-group list-group-flush">
                                <!-- list group -->
                                @foreach (var item in Model.Items)
                                {
                                    <form asp-controller="Cart" asp-action="UpdateCart" asp-route-id="@item.Id" method="post">
                                    <li class="list-group-item py-3 ps-0 border-top">
                                        <!-- row -->
                                        <div class="row align-items-center">
                                            <div class="col-6 col-md-6 col-lg-7">
                                                <div class="d-flex">
                                                    <img src="~/@item.ImagePath" alt="Product Image" class="icon-shape icon-xxl" />
                                                    <div class="ms-3">
                                                        <!-- title -->
                                                        <a href="@Url.Action("Details", "Product", new { id = item.Id })" class="text-inherit">
                                                            <h6 class="mb-0">@item.Name</h6>
                                                        </a>
                                                        <span><small class="text-muted">@item.Weight@item.Unit</small></span>
                                                        <!-- text -->
                                                        <div class="mt-2 small lh-1">
                                                            <div class="button-container">
                                                                <button asp-controller="Cart" asp-action="RemoveFromCart" asp-route-id="@item.Id" formmethod="post" type="submit" class="button-like-link">
                                                                    <span class="me-1 align-text-bottom">
                                                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2 text-danger">
                                                                            <polyline points="3 6 5 6 21 6"></polyline>
                                                                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                                                            <line x1="10" y1="11" x2="10" y2="17"></line>
                                                                            <line x1="14" y1="11" x2="14" y2="17"></line>
                                                                        </svg>
                                                                    </span>
                                                                    <span class="text-muted">Remove</span>
                                                                </button>

                                                                <button type="submit" class="button-like-link">
                                                                    <span class="me-1 align-text-bottom">
                                                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit text-success">
                                                                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                                                            <path d="M18.5 2.5a2.121 2.121 0 1 1 3 3L7 20.5l-4 1 1-4L18.5 2.5z"></path>
                                                                        </svg>
                                                                    </span>
                                                                    <span class="text-muted">Update</span>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- input group -->
                                            <div class="col-4 col-md-4 col-lg-3">
                                                <!-- input -->
                                                <div class="input-group input-spinner">
                                                    <button type="button" class="button-minus btn btn-sm" data-field="quantity">-</button>
                                                    <input type="number" step="1" max="10" value="@item.Quantity" name="quantity" class="quantity-field form-control-sm form-input" />
                                                    <button type="button" class="button-plus btn btn-sm" data-field="quantity">+</button>
                                                </div>
                                            </div>
                                            <!-- price -->
                                            <div class="col-2 text-lg-end text-start text-md-end col-md-2">
                                                <span class="fw-bold">@item.Price.ToString("C")</span>
                                            </div>
                                        </div>
                                    </li>
                                    </form>
                                }
                            </ul>
                        }
                        <!-- btn -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="ShopItems" asp-controller="Home" class="btn btn-primary">Continue Shopping</a>
                            <button type="submit" class="btn btn-dark">Update Cart</button>
                        </div>
                    </div>
                </div>

                @if (Model.Items.Count > 0)
                {
                    <!-- sidebar -->
                    <div class="col-12 col-lg-4 col-md-5">
                        <!-- card -->
                        <div class="mb-5 card card-custom">
                            <div class="card-body p-6">
                                <!-- heading -->
                                <h2 class="h5 mb-4">Summary</h2>
                                <div class="card mb-2">
                                    <!-- list group -->
                                    <ul class="list-group list-group-flush">
                                        <!-- list group item -->
                                        <li class="list-group-item d-flex justify-content-between align-items-start">
                                            <div class="me-auto">
                                                <div>Net Total</div>
                                            </div>
                                            <span>Rs.@Model.TotalPrice</span>
                                        </li>

                                        <!-- list group item -->
                                        <li class="list-group-item d-flex justify-content-between align-items-start">
                                            <div class="me-auto">
                                                <div>Service Fee</div>
                                            </div>
                                            <span>Rs.0.00</span>
                                        </li>
                                        <!-- list group item -->
                                        <li class="list-group-item d-flex justify-content-between align-items-start">
                                            <div class="me-auto">
                                                <div class="fw-bold">Subtotal</div>
                                            </div>
                                            @{
                                                decimal subtotal = Math.Round(Model.TotalPrice - Model.TotalDiscount, 0);
                                            }
                                            <span class="fw-bold">Rs.@subtotal</span>
                                        </li>
                                    </ul>
                                </div>
                                <div class="d-grid mb-1 mt-4">
                                    <!-- btn -->
                                    <a asp-action="CheckOut" asp-controller="Cart" class="btn btn-primary btn-lg d-flex justify-content-between align-items-center" type="submit">
                                        Proceed to Checkout
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>
</main>

@section Scripts {
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/simplebar/dist/simplebar.min.js"></script>
    <script src="~/js/theme.min.js"></script>
}
