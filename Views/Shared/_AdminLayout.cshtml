<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Codescandy" name="author">
    <title>Dashboard</title>
    <link href="~/lib/dropzone/dist/min/dropzone.min.css" rel="stylesheet" />
    <link href="~/lib/tiny-slider/dist/tiny-slider.css" rel="stylesheet" />
    <link href="~/lib/slick-carousel/slick/slick.css" rel="stylesheet" />
    <link href="~/lib/slick-carousel/slick/slick-theme.css" rel="stylesheet" />
    <link href="~/lib/nouislider/dist/nouislider.min.css" rel="stylesheet" />
    <!-- Favicon icon-->
    <link rel="shortcut icon" type="image/x-icon" href="~/images/favicon/favicon.ico">


    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <!-- Libs CSS -->
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="~/lib/feather-webfont/dist/feather-icons.css" rel="stylesheet">
    <link href="~/lib/simplebar/dist/simplebar.min.css" rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" />



    <link rel="stylesheet" href="~/css/theme.min.css">

    <style>
        .navbar-brand {
            font-weight: bold;
        }

        .nav-link {
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                color: #007bff;
            }

        .dropdown-menu {
            border: none;
            border-radius: 0.5rem;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        }

        .dropdown-item {
            font-size: 1rem;
            color: #333;
            transition: all 0.3s ease;
        }

            .dropdown-item:hover {
                background-color: #007bff;
                color: #fff;
            }
    </style>
</head>

<body>

    <header class="navbar navbar-expand-lg bg-success-subtle">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-carrot"></i> EGrocer
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")"><i class="bi bi-house me-1"></i>Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "Admin")"><i class="bi bi-speedometer me-1"></i>Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ViewOrder", "Order")"><i class="bi bi-table me-1"></i>Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ProductList", "Product")"><i class="bi bi-box-fill me-1"></i>Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("List", "Category")"><i class="bi bi-ui-checks-grid me-1"></i>Category</a>
                    </li>
                    @* <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Customers", "Customer")"><i class="bi bi-person-vcard me-1"></i>Customers</a>
                    </li> *@
                </ul>
                <div class="dropdown show">
                    <button class="btn btn-secondary" type="button" id="dropdownMenuButton"
                            data-bs-toggle="dropdown" aria-expanded="true">
                        <img src="~/images/avatar/avatar-1.jpg" alt="Avatar" class="avatar rounded-circle me-2">
                        Admin
                    </button>
                    <div class="dropdown-menu dropdown-menu-end shadow-lg border-0 rounded-top">
                        <div class="card border-0">
                            <div class="card-body p-0">
                                <div class="d-flex flex-column align-items-center justify-content-center bg-light py-4">
                                    <img src="~/images/avatar/avatar-1.jpg" alt="Avatar" class="avatar rounded-circle mb-2">
                                    <h5 class="mb-1">Admin</h5>
                                    <p class="small">admindemo@email.com</p>
                                </div>
                                <ul class="list-unstyled mb-0">
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Index", "Home")">
                                            <i class="bi bi-house me-2"></i>Home
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" asp-area="Identity" asp-page="/Account/Manage/Index">
                                            <i class="bi bi-person me-2"></i>Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" asp-area="Identity" asp-page="/Account/Manage/Index">
                                            <i class="bi bi-gear me-2"></i>Settings
                                        </a>
                                    </li>
                                </ul>
                                <hr class="dropdown-divider m-0">
                                <form class="p-3" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button type="submit" class="btn btn-danger btn-block">
                                        <i class="bi bi-box-arrow-right me-2"></i>Log Out
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </header>


    @RenderBody()


    @RenderSection("Scripts", required: false)
</body>

</html>



