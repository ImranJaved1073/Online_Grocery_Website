@model List<Product>

<section class="col-md-12">
    <!-- row -->
    <div class="row g-4 row-cols-1 mt-2">
        @foreach (var product in Model)
        {
            <form asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id" method="post">
                <div class="col">
                    <!-- card -->
                    <div class="card card-product">
                        <!-- card body -->
                        <div class="card-body">
                            <div class="row align-items-center">
                                <!-- col -->
                                <div class="col-md-4 col-12">
                                    <div class="text-center position-relative">
                                        <div class="position-absolute top-0">
                                            <!-- badge -->
                                            <span class="badge bg-danger">Sale</span>
                                        </div>
                                        <a asp-action="ShopProduct" asp-controller="Home" asp-route-id="@product.Id">
                                            <!-- img -->
                                            <img src="~/@product.ImagePath" alt="Grocery Ecommerce Template" class="mb-3 img-fluid" />
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-8 col-12 flex-grow-1">
                                    <!-- heading -->
                                    <div class="text-small mb-1">
                                        <a href="#!" class="text-decoration-none text-muted"><small>@product.CategoryName</small></a>
                                    </div>
                                    <h2 class="fs-6"><p class="text-inherit text-decoration-none">@product.Name</p></h2>

                                    <div class="mt-6">
                                        <!-- price -->
                                        <div>
                                            <span class="text-dark">@product.SalePrice.ToString("C")</span>
                                            <span class="text-decoration-line-through text-muted">@product.Price.ToString("C")</span>
                                        </div>
                                        <!-- btn -->
                                        <div class="d-flex mt-3">
                                            <div class="mt-3 me-5">
                                                <a asp-action="ShopProduct" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-icon btn-sm btn-outline-gray-400 text-muted">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </div>
                                            <!-- btn -->
                                            <div class="mt-2">
                                                <button type="submit" class="btn btn-primary">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-shopping-bag me-2">
                                                        <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                                                        <line x1="3" y1="6" x2="21" y2="6"></line>
                                                        <path d="M16 10a4 4 0 0 1-8 0"></path>
                                                    </svg>
                                                    Add to Cart
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        }
    </div>
</section>
