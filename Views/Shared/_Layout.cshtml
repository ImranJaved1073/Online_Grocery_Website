@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Codescandy" name="author">
    <link href="~/lib/tiny-slider/dist/tiny-slider.css" rel="stylesheet" />
    <link href="~/lib/dropzone/dist/min/dropzone.min.css" rel="stylesheet" />
    <link href="~/lib/slick-carousel/slick/slick.css" rel="stylesheet" />
    <link href="~/lib/slick-carousel/slick/slick-theme.css" rel="stylesheet" />
    <link href="~/lib/nouislider/dist/nouislider.min.css" rel="stylesheet" />

    <link rel="shortcut icon" type="image/x-icon" href="~/images/favicon/favicon.ico">

    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="~/lib/feather-webfont/dist/feather-icons.css" rel="stylesheet">
    <link href="~/lib/simplebar/dist/simplebar.min.css" rel="stylesheet">
    <!-- Add FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/css/theme.min.css">

    <style>
        footer h2, footer h3 {
            margin: 0;
        }

        footer .fa, footer .bi {
            font-size: 1.2rem;
            color: #6c757d;
        }

        footer a {
            transition: color 0.2s ease-in-out;
        }

            footer a:hover {
                color: #007bff;
            }

        footer .text-muted {
            color: #6c757d !important;
        }

        footer .list-inline-item a {
            font-size: 1.2rem;
            padding: 0.2rem;
        }

            footer .list-inline-item a:hover {
                color: #007bff;
            }

        html, body {
            height: 100%;
            margin: 0;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }

        footer {
            flex-shrink: 0;
        }

        

        .navbar-nav .nav-link {
            margin-right: 1rem;
        }



            .navbar-nav .dropdown-item:hover {
                color: #f8f9fa;
            }
    </style>
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-light bg-success-subtle border-bottom box-shadow mb-3 sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-carrot"></i> EGrocer
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @await Component.InvokeAsync("Categories")
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-store"></i> Shop
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("ShopItems", "Home")"><i class="fas fa-boxes"></i> Products</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Cart", "Cart")"><i class="fas fa-shopping-cart"></i> Shopping Cart</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("CheckOut", "Cart")"><i class="fas fa-cash-register"></i> Checkout</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-file-alt"></i> Pages
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("About", "Home")"><i class="fas fa-info-circle"></i> About us</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("ContactUS", "Home")"><i class="fas fa-envelope"></i> Contact</a></li>
                            </ul>
                        </li>
                        @if (User.HasClaim(ClaimTypes.Email,"admin@gmail.com"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Dashboard", "Admin")">
                                    <i class="fas fa-tachometer"></i> Dashboard
                                </a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <script src="~/js/vendors/validation.js"></script>
    <div class="wrapper d-flex flex-column min-vh-100">
        <main class="flex-grow-1">
            @RenderBody()
        </main>

        <footer class="bg-success-subtle pt-5">
            <div class="container">
                <div class="row text-md-start text-center">
                    <div class="col-lg-4 col-md-6 col-sm-12 pb-4 d-flex flex-column align-items-center align-items-md-start">
                        <h2 class="mb-3">EGrocer</h2>
                        <h3 class="text-muted">Consume Smartly Live Healthy</h3>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 pb-4 d-flex flex-column align-items-center align-items-md-start">
                        <h2 class="mb-3">Links</h2>
                        <div class="d-flex flex-column align-items-center align-items-md-start">
                            <a href="#" class="text-decoration-none text-dark mb-2">
                                <h3 class="h6">Privacy</h3>
                            </a>
                            <a href="#" class="text-decoration-none text-dark mb-2">
                                <h3 class="h6">Terms</h3>
                            </a>
                            <a href="#" class="text-decoration-none text-dark mb-2">
                                <h3 class="h6">Disclaimer</h3>
                            </a>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 pb-4 d-flex flex-column align-items-center align-items-md-start">
                        <h2 class="mb-3">Contact</h2>
                        <div class="d-flex flex-column align-items-center align-items-md-start">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fa fa-phone me-2"></i>
                                <a href="tel:+923224243115" class="text-decoration-none text-dark">
                                    <h3 class="h6 mb-0">(+92) 322-4243115</h3>
                                </a>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="fa fa-home me-2"></i>
                                <a href="https://maps.app.goo.gl/5E5qdScQ3f3cntMDA" class="text-decoration-none text-dark">
                                    <h3 class="h6 mb-0">Lahore, Pakistan</h3>
                                </a>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="fa fa-envelope me-2"></i>
                                <a href="mailto:imj299792@gmail.com" class="text-decoration-none text-dark">
                                    <h3 class="h6 mb-0">imj299792@gmail.com</h3>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="border-top py-4 mt-4">
                    <div class="row align-items-center">
                        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                            <span class="small text-muted">
                                © 2022 -
                                <script>
                                    document.write(new Date().getFullYear());
                                </script> EGrocer Online Store. All rights reserved. Powered by
                                <a href="https://github.com/ImranJaved1073" class="text-decoration-none text-dark">Imran Javed</a>.
                            </span>
                        </div>
                        <div class="col-md-6 text-center text-md-end">
                            <ul class="list-inline mb-0">
                                <li class="list-inline-item small text-muted">Follow us on</li>
                                <li class="list-inline-item me-2">
                                    <a href="https://www.facebook.com/immijanansari" class="text-dark">
                                        <i class="bi bi-facebook"></i>
                                    </a>
                                </li>
                                <li class="list-inline-item me-2">
                                    <a href="#!" class="text-dark">
                                        <i class="bi bi-twitter"></i>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="https://www.instagram.com/_imran.ansarii/" class="text-dark">
                                        <i class="bi bi-instagram"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

    </div>

