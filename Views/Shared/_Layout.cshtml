<!DOCTYPE html>
<html lang="en">
<head>

    <!-- Required meta tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Codescandy" name="author">
    <link href="~/lib/tiny-slider/dist/tiny-slider.css" rel="stylesheet" />
    <link href="~/lib/dropzone/dist/min/dropzone.min.css" rel="stylesheet" />
    <link href="~/lib/slick-carousel/slick/slick.css" rel="stylesheet" />
    <link href="~/lib/slick-carousel/slick/slick-theme.css" rel="stylesheet" />
    <link href="~/lib/nouislider/dist/nouislider.min.css" rel="stylesheet" />
    <!-- Favicon icon-->
    <link rel="shortcut icon" type="image/x-icon" href="~/images/favicon/favicon.ico">


    <!-- Libs CSS -->
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="~/lib/feather-webfont/dist/feather-icons.css" rel="stylesheet">
    <link href="~/lib/simplebar/dist/simplebar.min.css" rel="stylesheet">


    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/css/theme.min.css">


    <style>
        footer h2, footer h3 {
            margin: 0;
        }

        footer .fa, footer .bi {
            font-size: 1.2rem;
            color: #6c757d;
        }

        footer a {
            transition: color 0.2s ease-in-out;
        }

            footer a:hover {
                color: #007bff;
            }

        footer .text-muted {
            color: #6c757d !important;
        }

        footer .list-inline-item a {
            font-size: 1.2rem;
            padding: 0.2rem;
        }

            footer .list-inline-item a:hover {
                color: #007bff;
            }

        html, body {
            height: 100%;
            margin: 0;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }

        footer {
            flex-shrink: 0;
        }


    </style>
</head>
<body>
    <header class="bg-success-subtle sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-success" asp-area="" asp-controller="Home" asp-action="Index">EGrocer</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @await Component.InvokeAsync("Categories")
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Shop</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-dark" href="@Url.Action("ShopItems", "Home")">All Products</a></li>
                                <li><a class="dropdown-item text-dark" href="@Url.Action("WishList", "Home")">Wishlist</a></li>
                                <li><a class="dropdown-item text-dark" href="@Url.Action("Cart", "Cart")">Shopping Cart</a></li>
                                <li><a class="dropdown-item text-dark" href="@Url.Action("CheckOut", "Cart")">Checkout</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Pages</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("AboutUs", "Home")">About us</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("ContactUs", "Home")">Contact</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Dashboard", "Admin")">Dashboard</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <script src="~/js/vendors/validation.js"></script>
    <div class="wrapper d-flex flex-column min-vh-100">
        <main class="flex-grow-1">
            @RenderBody()
        </main>
        


    <footer class="bg-success-subtle pt-5">
        <div class="container">
            <div class="row text-md-start text-center">
                <div class="col-lg-4 col-md-6 col-sm-12 pb-4">
